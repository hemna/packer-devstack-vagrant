{
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "40000",
    "headless": "true",
    "iso_checksum": "29a8b9009509b39d542ecb229787cdf48f05e739a932289de9e9858d7c487c80",
    "iso_checksum_type": "sha256",
    "memory": "512",
    "mirror": "http://releases.ubuntu.com",
    "ssh_timeout": "60m"
  },
  "builders": [
    {
      "boot_command":[
        "<enter><wait>",
        "<f6><esc>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "/install/vmlinuz ",
        "initrd=/install/initrd.gz ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "auto-install/enable=true ",
        "debconf/priority=critical ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/ubuntu-16.04/preseed.cfg ",
        "<enter>"
      ],
      "accelerator": "kvm",
      "boot_wait": "4s",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "http",
      "iso_url": "{{user `mirror`}}/16.04/ubuntu-16.04.1-server-amd64.iso",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "net_device": "virtio-net",
      "vm_name": "xenial-devstack",
      "qemuargs": [
        ["-m", "4096"]
      ]
    }
  ],
  "post-processors": [{
    "type": "vagrant",
    "compression_level": "{{user `compression_level`}}"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "files/",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "script": "scripts/root_setup.sh",
      "execute_command": "echo 'vagrant' | sudo -S bash '{{ .Path }}' {{user `flavor`}}"
    },
    {
      "type": "shell",
      "script": "scripts/vagrant_setup.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} {{ .Path }} {{user `flavor`}}"
    }
  ]
}

